#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "xparameters.h"
#include "xil_io.h"
#include "sleep.h"

// AXI IP Base Address (change this to match your actual address)
#define AXI_IP_BASEADDR     XPAR_AXI_IP_0_S00_AXI_BASEADDR

// Register offsets
#define REG_CONTROL         0x00  // Control register: [1]=done, [0]=start
#define REG_MODE            0x04  // Mode register: [1:0]=mode
#define REG_RESERVED1       0x08  // Reserved
#define REG_RESERVED2       0x0C  // Reserved

// Mode definitions
#define MODE_PASS           0
#define MODE_MIRROR         1
#define MODE_ROTATE_90      2
#define MODE_ROTATE_180     3

// Image parameters
#define IMG_WIDTH           16
#define IMG_HEIGHT          16
#define IMG_SIZE            (IMG_WIDTH * IMG_HEIGHT)

// BRAM base address (change to your actual BRAM address)
#define BRAM_BASEADDR       0x40000000  // Example address

// Test image buffers
u8 input_image[IMG_SIZE];
u8 output_image[IMG_SIZE];

//=============================================================================
// AXI IP Control Functions
//=============================================================================

void axi_ip_start(u32 mode) {
    // Set mode
    Xil_Out32(AXI_IP_BASEADDR + REG_MODE, mode);

    // Set start bit
    Xil_Out32(AXI_IP_BASEADDR + REG_CONTROL, 0x01);

    xil_printf("Started processing with mode %d\r\n", mode);
}

u32 axi_ip_is_done(void) {
    u32 status = Xil_In32(AXI_IP_BASEADDR + REG_CONTROL);
    return (status & 0x02) >> 1;  // Check done bit
}

void axi_ip_wait_done(void) {
    xil_printf("Waiting for completion...\r\n");

    u32 timeout = 1000000;  // Timeout counter
    while (!axi_ip_is_done() && timeout > 0) {
        timeout--;
    }

    if (timeout == 0) {
        xil_printf("ERROR: Timeout waiting for done!\r\n");
    } else {
        xil_printf("Processing completed!\r\n");
    }
}

//=============================================================================
// BRAM Access Functions
//=============================================================================

void write_bram(u32 addr, u8 data) {
    Xil_Out32(BRAM_BASEADDR + (addr * 4), (u32)data);
}

u8 read_bram(u32 addr) {
    return (u8)(Xil_In32(BRAM_BASEADDR + (addr * 4)) & 0xFF);
}

void load_image_to_bram(u8* image) {
    xil_printf("Loading image to BRAM...\r\n");
    for (int i = 0; i < IMG_SIZE; i++) {
        write_bram(i, image[i]);
    }
    xil_printf("Image loaded (%d pixels)\r\n", IMG_SIZE);
}

void read_image_from_bram(u8* image) {
    for (int i = 0; i < IMG_SIZE; i++) {
        image[i] = read_bram(i);
    }
}

//=============================================================================
// Test Pattern Generation
//=============================================================================

void create_test_pattern(u8* image) {
    xil_printf("Creating test pattern...\r\n");
    for (int i = 0; i < IMG_SIZE; i++) {
        image[i] = (u8)i;  // Sequential pattern
    }
}

void create_checkerboard(u8* image) {
    xil_printf("Creating checkerboard pattern...\r\n");
    for (int y = 0; y < IMG_HEIGHT; y++) {
        for (int x = 0; x < IMG_WIDTH; x++) {
            int idx = y * IMG_WIDTH + x;
            image[idx] = ((x + y) % 2) ? 0xFF : 0x00;
        }
    }
}

void create_gradient(u8* image) {
    xil_printf("Creating gradient pattern...\r\n");
    for (int y = 0; y < IMG_HEIGHT; y++) {
        for (int x = 0; x < IMG_WIDTH; x++) {
            int idx = y * IMG_WIDTH + x;
            image[idx] = x * 16;  // Horizontal gradient
        }
    }
}

void create_cross(u8* image) {
    xil_printf("Creating cross pattern...\r\n");
    // Fill with black
    for (int i = 0; i < IMG_SIZE; i++) {
        image[i] = 0x00;
    }

    // Draw white cross
    for (int i = 0; i < IMG_WIDTH; i++) {
        // Horizontal line
        image[IMG_HEIGHT/2 * IMG_WIDTH + i] = 0xFF;
        // Vertical line
        image[i * IMG_WIDTH + IMG_WIDTH/2] = 0xFF;
    }
}

//=============================================================================
// Image Display Functions
//=============================================================================

void print_image(const char* title, u8* image) {
    xil_printf("\r\n%s:\r\n", title);
    xil_printf("   ");
    for (int x = 0; x < IMG_WIDTH; x++) {
        xil_printf(" %2d", x);
    }
    xil_printf("\r\n");

    for (int y = 0; y < IMG_HEIGHT; y++) {
        xil_printf("%2d:", y);
        for (int x = 0; x < IMG_WIDTH; x++) {
            int idx = y * IMG_WIDTH + x;
            xil_printf(" %02x", image[idx]);
        }
        xil_printf("\r\n");
    }
}

void print_corners(u8* image) {
    xil_printf("Corner pixels:\r\n");
    xil_printf("  Top-Left     [0,0]:    0x%02X\r\n", image[0]);
    xil_printf("  Top-Right    [15,0]:   0x%02X\r\n", image[15]);
    xil_printf("  Bottom-Left  [0,15]:   0x%02X\r\n", image[240]);
    xil_printf("  Bottom-Right [15,15]:  0x%02X\r\n", image[255]);
}

//=============================================================================
// Test Functions
//=============================================================================

void test_mode(const char* mode_name, u32 mode, u8* input) {
    xil_printf("\r\n========================================\r\n");
    xil_printf("Testing: %s\r\n", mode_name);
    xil_printf("========================================\r\n");

    // Load input image to BRAM
    load_image_to_bram(input);

    // Start processing
    axi_ip_start(mode);

    // Wait for completion
    axi_ip_wait_done();

    // Read output from BRAM (in real design, output might be via AXI Stream)
    // For now, we'll read back from BRAM to verify
    read_image_from_bram(output_image);

    // Display results
    print_image("Output", output_image);
    print_corners(output_image);

    xil_printf("\r\n");
}

void test_all_modes(void) {
    xil_printf("\r\n");
    xil_printf("================================================\r\n");
    xil_printf("  AXI IP Image Rotation Test Suite\r\n");
    xil_printf("  Image Size: %dx%d = %d pixels\r\n", IMG_WIDTH, IMG_HEIGHT, IMG_SIZE);
    xil_printf("================================================\r\n");

    // Test 1: Sequential pattern
    xil_printf("\r\n>>> TEST 1: Sequential Pattern <<<\r\n");
    create_test_pattern(input_image);
    print_image("Input (Sequential)", input_image);

    test_mode("Pass-through", MODE_PASS, input_image);
    test_mode("Mirror Horizontal", MODE_MIRROR, input_image);
    test_mode("Rotate 90 CW", MODE_ROTATE_90, input_image);
    test_mode("Rotate 180", MODE_ROTATE_180, input_image);

    // Test 2: Checkerboard
    xil_printf("\r\n>>> TEST 2: Checkerboard Pattern <<<\r\n");
    create_checkerboard(input_image);
    print_image("Input (Checkerboard)", input_image);

    test_mode("Rotate 90 CW", MODE_ROTATE_90, input_image);

    // Test 3: Gradient
    xil_printf("\r\n>>> TEST 3: Gradient Pattern <<<\r\n");
    create_gradient(input_image);
    print_image("Input (Gradient)", input_image);

    test_mode("Mirror Horizontal", MODE_MIRROR, input_image);
    test_mode("Rotate 90 CW", MODE_ROTATE_90, input_image);

    // Test 4: Cross pattern
    xil_printf("\r\n>>> TEST 4: Cross Pattern <<<\r\n");
    create_cross(input_image);
    print_image("Input (Cross)", input_image);

    test_mode("Rotate 90 CW", MODE_ROTATE_90, input_image);
    test_mode("Rotate 180", MODE_ROTATE_180, input_image);
}

//=============================================================================
// Performance Test
//=============================================================================

void performance_test(void) {
    xil_printf("\r\n========================================\r\n");
    xil_printf("Performance Test\r\n");
    xil_printf("========================================\r\n");

    create_test_pattern(input_image);
    load_image_to_bram(input_image);

    int iterations = 100;
    u32 start_time, end_time;

    for (int mode = 0; mode < 4; mode++) {
        start_time = XTime_GetTime();

        for (int i = 0; i < iterations; i++) {
            axi_ip_start(mode);
            axi_ip_wait_done();
        }

        end_time = XTime_GetTime();
        u32 elapsed = end_time - start_time;

        xil_printf("Mode %d: %d iterations completed\r\n", mode, iterations);
        xil_printf("  Time: %u cycles\r\n", elapsed);
        xil_printf("  Avg:  %u cycles/frame\r\n", elapsed / iterations);
    }
}

//=============================================================================
// Interactive Menu
//=============================================================================

void print_menu(void) {
    xil_printf("\r\n");
    xil_printf("========================================\r\n");
    xil_printf("  Image Rotation Test Menu\r\n");
    xil_printf("========================================\r\n");
    xil_printf("1. Test Pass-through\r\n");
    xil_printf("2. Test Mirror Horizontal\r\n");
    xil_printf("3. Test Rotate 90 CW\r\n");
    xil_printf("4. Test Rotate 180\r\n");
    xil_printf("5. Test All Modes\r\n");
    xil_printf("6. Performance Test\r\n");
    xil_printf("7. Load Custom Pattern\r\n");
    xil_printf("0. Exit\r\n");
    xil_printf("========================================\r\n");
    xil_printf("Enter choice: ");
}

//=============================================================================
// Main Function
//=============================================================================

int main()
{
    init_platform();

    xil_printf("\r\n\r\n");
    xil_printf("*********************************************\r\n");
    xil_printf("*  AXI IP Image Rotation Test Application  *\r\n");
    xil_printf("*********************************************\r\n");
    xil_printf("\r\n");

    // Check AXI IP availability
    xil_printf("AXI IP Base Address: 0x%08X\r\n", AXI_IP_BASEADDR);
    xil_printf("BRAM Base Address:   0x%08X\r\n", BRAM_BASEADDR);

    // Run automatic test suite
    xil_printf("\r\nRunning automatic test suite...\r\n");
    test_all_modes();

    // Performance test
    performance_test();

    xil_printf("\r\n");
    xil_printf("*********************************************\r\n");
    xil_printf("*  All Tests Completed Successfully!       *\r\n");
    xil_printf("*********************************************\r\n");

    // Interactive menu (optional)
    char choice;
    while(1) {
        print_menu();
        // Read user input here if UART is configured
        // For now, just break after automatic tests
        break;
    }

    cleanup_platform();
    return 0;
}
